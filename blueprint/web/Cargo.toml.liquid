[package]
name = "{{project-name}}-web"
version = "0.0.1"
edition = "2021"
publish = false

[lib]
doctest = false

[dependencies]
anyhow = "1.0"
axum = "0.7"
{{project-name}}-config = { path = "../config" }
{% unless template_type == "minimal" -%}
{{project-name}}-db = { path = "../db" }
{%- endunless %}
serde = { version = "1.0", features = ["derive"] }
tokio = { version = "1.34", features = ["full"] }
tower-http = { version = "0.5", features = ["full"] }
tracing = "0.1"
tracing-panic = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter", "registry", "fmt"] }
{% unless template_type == "minimal" -%}
uuid = { version = "1.6", features = ["serde"] }
{%- endunless %}

[dev-dependencies]
fake = "2.9"
serde_json = "1.0"
tower = { version = "0.4", features = ["util"] }
hyper = { version = "1.0", features = ["full"] }
{% unless template_type == "minimal" -%}
{{project-name}}-db = { path = "../db", features = ["test-helpers"] }
{%- endunless %}
{{project-name}}-macros = { path = "../macros" }
