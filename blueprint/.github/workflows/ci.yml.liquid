name: CI

on:
  push:
    branches:
      - main
  pull_request: {}


jobs:
  rustfmt:
    name: "Rust Format"
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    - uses: actions-rust-lang/setup-rust-toolchain@v1
      with:
        components: rustfmt

    - name: fmt
      run: cargo fmt --all --check

  clippy:
    name: "Clippy"
    runs-on: ubuntu-latest

    {% unless template_type == "minimal" -%}
    env:
        SQLX_OFFLINE: 1
    services:
      postgres:
        image: postgres
        env:
          POSTGRES_DB: {{crate_name}}
          POSTGRES_USER: {{crate_name}}
          POSTGRES_PASSWORD: {{crate_name}}
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
        ports:
          - 5432:5432
    {%- endunless %}

    steps:
    - uses: actions/checkout@v4
    - uses: actions-rust-lang/setup-rust-toolchain@v1
      with:
        components: clippy
    {% unless template_type == "minimal" -%}
    - name: migrate
      run: cargo db reset
    {%- endunless %}
    - name: clippy
      run: cargo clippy --all-targets -- -D warnings

  test:
    name: "Test"
    runs-on: ubuntu-latest

    {% unless template_type == "minimal" -%}
    services:
      postgres:
        image: postgres
        env:
          POSTGRES_DB: {{crate_name}}
          POSTGRES_USER: {{crate_name}}
          POSTGRES_PASSWORD: {{crate_name}}
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
        ports:
          - 5432:5432
      postgres_test:
        image: postgres
        env:
          POSTGRES_DB: {{crate_name}}_test
          POSTGRES_USER: {{crate_name}}_test
          POSTGRES_PASSWORD: {{crate_name}}_test
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
        ports:
          - 5433:5432
    {%- endunless %}

    steps:
    - uses: actions/checkout@v4
    - uses: actions-rust-lang/setup-rust-toolchain@v1
    {% unless template_type == "minimal" -%}
    - name: migrate
      run: |
        cargo db reset
        cargo db reset -e test
    {%- endunless %}
    - name: test
      run: cargo test
